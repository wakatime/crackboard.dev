{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env"
  ],
  "globalEnv": [
    "DATABASE_URL",
    "ADMIN_IDS",
    "NEXT_PUBLIC_BASE_URL",
    "JWT_SECRET",
    "WAKATIME_APP_ID",
    "WAKATIME_APP_SECRET"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "start": {},
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
