{
  "name": "@workspace/tasks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf .turbo node_modules",
    "worker": "pnpm with-env tsx src/scripts/wakaqWorker.ts",
    "scheduler": "pnpm with-env tsx src/scripts/wakaqScheduler.ts",
    "info": "pnpm with-env tsx src/scripts/wakaqInfo.ts",
    "purge": "pnpm with-env tsx src/scripts/wakaqPurge.ts",
    "with-env": "dotenv -e ../../.env -c --"
  },
  "dependencies": {
    "@workspace/core": "workspace:*",
    "@workspace/db": "workspace:*",
    "@workspace/external": "workspace:*",
    "@aws-sdk/client-s3": "^3.802.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@vscode/vscode-languagedetection": "^1.0.22",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "ioredis": "^5.6.1",
    "nanoid": "^5.1.5",
    "next": "^15.3.6",
    "node-html-parser": "^7.0.1",
    "slugify": "^1.6.6",
    "ts-duration": "^1.1.0",
    "tsx": "^4.19.4",
    "uuid": "^11.1.0",
    "wakaq": "^2.2.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/tsconfig": "workspace:*",
    "@types/uuid": "^10.0.0",
    "@types/web-app-manifest": "^1.0.9",
    "dotenv-cli": "^8.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "^8.31.1"
  }
}
