{
  "name": "@workspace/tasks",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rm -rf .turbo node_modules",
    "worker": "pnpm with-env tsx src/scripts/wakaqWorker.ts",
    "scheduler": "pnpm with-env tsx src/scripts/wakaqScheduler.ts",
    "info": "pnpm with-env tsx src/scripts/wakaqInfo.ts",
    "purge": "pnpm with-env tsx src/scripts/wakaqPurge.ts",
    "with-env": "dotenv -e ../../.env -c --"
  },
  "dependencies": {
    "@workspace/core": "workspace:*",
    "@workspace/db": "workspace:*",
    "@workspace/external": "workspace:*",
    "@aws-sdk/client-s3": "^3.943.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@vscode/vscode-languagedetection": "^1.0.22",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.8.2",
    "nanoid": "^5.1.6",
    "next": "^16.0.7",
    "node-html-parser": "^7.0.1",
    "slugify": "^1.6.6",
    "ts-duration": "^1.1.0",
    "tsx": "^4.21.0",
    "uuid": "^13.0.0",
    "wakaq": "^3.0.2",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/tsconfig": "workspace:*",
    "@types/uuid": "^10.0.0",
    "@types/web-app-manifest": "^1.0.9",
    "dotenv-cli": "^11.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "typescript-eslint": "^8.48.1"
  }
}
